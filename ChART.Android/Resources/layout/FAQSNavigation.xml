            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="¿Donde consigo mi tarjeta?"
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="200.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="20dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="La tarjeta de uso general la puedes conseguir en las terminales estaciones, y en mas 250 tiendas Oxxo. La tarjeta de uso preferencial, con la que adultos mayores, personas con discapacidad, estudiantes e integrantes de etnias indígenas obtienen un 50% de descuento. Se puede conseguir en CIDECH, Dirección de Vialidad y Tránsito, Terminal Norte y Terminal Sur"
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="230.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="15dp"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_marginLeft="28dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="¿Que precio tiene?"
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="400.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="20dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="La tarjeta tiene un costo de 26 pesos e incluye un pasaje del sistema Vivebus. El pasaje tiene un costo de 6 pesos. Las rutas alimentadoras ó primer transbordo tiene un costo de 2 pesos. Un tercer transbordo es gratis. La tarjeta de uso preferencial obtiene un descuento del 50% en todos los casos."
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="430.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="15dp"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_marginLeft="28dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="¿Que pasa si se me termina el saldo y estoy por subirme?"
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="570.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="20dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="El sistema Vivebus dará crédito de un pasaje (6 pesos) mismos que seran cobrados en la siguiente recarga de la tarjeta."
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="630.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="15dp"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_marginLeft="28dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="¿Que horario tiene?"
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="710.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="20dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
