<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d83733">
    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d83733"
        android:gravity="top"
        android:scrollbars="vertical"
        android:padding="0dp">
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="Preguntas Frecuentes"
            android:textColor="#333333"
            android:textScaleX="1"
            android:layout_marginTop="10.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="ViveBus"
            android:textColor="#333333"
            android:textScaleX="1"
            android:layout_marginTop="60.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:textStyle="italic"
            android:typeface="normal"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="¿Cómo puedo pagar?"
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="90.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="20dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="El pago se hace por medio de una tarjeta electrónica recargable. El efectivo deja de ser una forma de pago para el transporte público."
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="120.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="15dp"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_marginLeft="28dp" />
