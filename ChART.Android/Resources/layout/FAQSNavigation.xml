            android:layout_width="314.7dp"
            android:layout_height="wrap_content"
            android:text="El Vivebus tiene un horario de 5:30 a 22:30. Las rutas alimentadoras tendrán un horario de 5:15 a 23:30."
            android:textColor="#ff333333"
            android:textScaleX="1"
            android:layout_marginTop="740.0dp"
            android:layout_marginBottom="0.0dp"
            android:padding="5dp"
            android:shadowColor="#f23131"
            android:typeface="normal"
            android:textSize="15dp"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_marginLeft="28dp" />
    </RelativeLayout>
</ScrollView>